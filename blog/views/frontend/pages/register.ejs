<!doctype HTML>
<html lang="en">

    <head>
        <meta charSet="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>
            <%= title  %> : Blog
        </title>
        <link rel="stylesheet" href="/css/themify-icons.css" />
        <link rel="stylesheet" href="/css/vendor.bundle.base.css" />
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="icon" href="/images/favicon.png">
        <style>
            .auth .register-half-bg {
                background: url(../../images/register-bg.png);
                background-size: contain;
                background-attachment: fixed;
                background-position: 100% 50%;
            }
            .invalid-feedback-display{
                display: block;
            }
        </style>
    </head>

    <body class="sidebar-fixed">
        <div class="container-scroller">
            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                    <div class="row flex-grow">
                        <div class="col-lg-6 d-flex align-items-center justify-content-center">
                            <div class="auth-form-transparent text-left p-3">
                                <h4>New here?</h4>
                                <h6 class="font-weight-medium text-gray">Join us today! It takes only few steps to finish. Please fill up all required fields.</h6>
                               <!--  <% if(Object.keys(errors).length){ %>
                                <div class="alert alert-danger" role="alert">
                                    Please fix following errors...
                                    <% for(let error in errors){ %>
                                    <li>
                                        <%= errors[error] %>
                                    </li>
                                    <% } %>
                                </div>
                                <% } %> -->
                                <form class="pt-3" method="post" action="/register">
                                    <div class="form-group ">
                                        <label>Name <i class="ti-star text-danger" title="Required"></i></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="ti-user text-primary"></i>
                                                </span>
                                            </div>
                                            <input name="name" type="text" class="form-control form-control-lg border-left-0 <%= errors.name ? 'is-invalid' : '' %>" placeholder="Enter your fullname please" value="<%= values.name ? values.name : '' %>" />
                                            <div class="invalid-feedback">
                                                <%= errors.name ? errors.name : '' %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Email <i class="ti-star text-danger" title="Required"></i></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="ti-email text-primary"></i>
                                                </span>
                                            </div>
                                            <input name="email" type="text" class="form-control form-control-lg border-left-0 <%= errors.email ? 'is-invalid' : '' %>" placeholder="Enter your valid email address please"  value="<%= values.email ? values.email : '' %>" />
                                            <div class="invalid-feedback">
                                                <%= errors.email ? errors.email : '' %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Password <i class="ti-star text-danger" title="Required"></i></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="ti-lock text-primary"></i>
                                                </span>
                                            </div>
                                            <input name="password" type="password" class="form-control form-control-lg border-left-0 <%= errors.password ? 'is-invalid' : '' %>" placeholder="Make a strong password please"  value="<%= values.password ? values.password : '' %>" />
                                            <div class="invalid-feedback">
                                                <%= errors.password ? errors.password : '' %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Verify Password <i class="ti-star text-danger" title="Required"></i></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="ti-lock text-primary"></i>
                                                </span>
                                            </div>
                                            <input name="verifyPassword" type="password" class="form-control form-control-lg border-left-0 <%= errors.verifyPassword ? 'is-invalid' : '' %>" placeholder="Verify your password please"  value="<%= values.verifyPassword ? values.verifyPassword : '' %>" />
                                            <div class="invalid-feedback">
                                                <%= errors.verifyPassword ? errors.verifyPassword : '' %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                <input name="agree" type="checkbox" class="form-check-input" <%= values.agree ? 'checked' : '' %> />
                                                I agree to all Terms & Conditions
                                            </label>
                                            <% if(errors.agree){ %>
                                            <div class="invalid-feedback invalid-feedback-display">
                                                <%=  errors.agree %>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <button name="create" type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Register</button>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Already have an account? <a href="/login" class="text-primary">Login</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 register-half-bg d-flex flex-row">
                            <p class="text-dark font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2018 All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="js/vendor.bundle.base.js"></script>
        <script src="js/off-canvas.js"></script>
        <script src="js/hoverable-collapse.js"></script>
        <script src="js/template.js"></script>
    </body>

</html>
